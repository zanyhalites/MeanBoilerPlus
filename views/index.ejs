<html>
<head>
  <title>MEAN App BoilerplatePlus</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
</head>
<body ng-app="my-app" ng-controller="MainCtrl">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <ui-view></ui-view>        <!-- added this -->

    </div>
  </div>

  <script type="text/ng-template" id="/home.html">     <!-- added this -->
      <div class="page-header">
        <h1>Catalog</h1>
      </div>

      <!-- Added the form -->
      <form ng-submit="addPost()"
        style="margin-top:30px;">
        <h3>Add a New Catalog Entry</h3>

        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Title"
            ng-model="title"></input>
        </div>
        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Description"
          ng-model="description"></input>
        </div>
        <button type="submit" class="btn btn-danger">Post</button>
      </form>

      <div ng-repeat="post in posts">
          {{post.title}}
          {{post.description}}      
      </div>
      <div><a href="/#/search"> search</a> </div>

  </script>

  <script type="text/ng-template" id="/search.html">     <!-- added this -->
      <div class="page-header">
        <h1>Catalog</h1>
      </div>

      <!-- Added the form -->
      <form ng-submit="searchPosts()"
        style="margin-top:30px;">
        <h3>Search Catalog</h3>
        <button type="submit" class="btn btn-danger">List Catalog</button>
      </form>

      <form ng-submit="searchPost(title)"
        style="margin-top:30px;">
        <h3>Search Catalog with title</h3>

        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Title"
            ng-model="title"></input>
        </div>
        
        <button type="submit" class="btn btn-danger">List Catalog</button>
      </form>

      <div ng-repeat="post in posts">
          {{post.title}}
          {{post.description}}
      </div>
      <div><a href="/#/home"> Home</a> </div>
    

  </script>

</body>
</html>